{
  "name": "blog-posts-back",
  "private": true,
  "version": "1.0.0",
  "description": "Blog-posts Back-end",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:webpack": "nest build --webpack",
    "build:full": "sh ./build.sh",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "nest-gen": "nest generate",
    "nest-help": "nest --help",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/index",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.4",
    "@nestjs/config": "^4.0",
    "@nestjs/core": "^10.4",
    "@nestjs/mongoose": "^11.0",
    "@nestjs/platform-express": "^10.4",
    "class-validator": "^0.14.1",
    "mongoose": "^8.13.2",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0",
    "@nestjs/schematics": "^11.0",
    "@nestjs/testing": "^10.4",
    "@types/express": "^5.0",
    "@types/jest": "^29.5",
    "@types/node": "^22.15",
    "@types/supertest": "^6.0",
    "@typescript-eslint/eslint-plugin": "^8.31",
    "@typescript-eslint/parser": "^8.31",
    "eslint": "^9.25",
    "eslint-config-prettier": "^10.1",
    "eslint-plugin-prettier": "^5.2",
    "jest": "^29.7",
    "prettier": "^3.5",
    "source-map-support": "^0.5",
    "supertest": "^7.1",
    "ts-jest": "^29.3",
    "ts-loader": "^9.5",
    "ts-node": "^10.9",
    "tsconfig-paths": "^4.2",
    "typescript": "^5.8"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
